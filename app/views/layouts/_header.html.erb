<header class="simplechat-header py-3 bg-light shadow-sm position-relative d-flex align-items-center justify-content-between">
  <!-- 左側のアイコン -->
  <div class="header-icons d-none d-md-flex gap-3 position-absolute start-0 ps-3">
    <!-- 友人アイコン -->
    <%= link_to home_path(mode: "friends"), class: "icon-button" do %>
      <i class="fas fa-user"></i>
    <% end %>
    <!-- グループアイコン -->
    <%= link_to home_path(mode: "group"), class: "icon-button" do %>
      <i class="fas fa-users"></i>
    <% end %>
    <!-- 設定アイコン -->
    <%= link_to home_path(mode: "setting"), class: "icon-button" do %>
      <i class="fas fa-cog"></i>
    <% end %>
  </div>
  <!-- 中央のタイトル -->
  <h1 class="m-0 w-100 text-center">
    <%= link_to "SimpleChat", home_path, class: "app-title text-decoration-none" %>
  </h1>
  <!--クレジット-->
  <div class="sidebar-item pe-3 d-none d-md-block">
    <%= link_to home_path(mode: "credit"), class: "icon-button" do %>
      <i class="fas fa-info-circle"></i>
    <% end %>
  </div>

    <!--モバイル用-->
  <div class="dropdown d-md-none ms-auto me-3">
    <button class="btn btn-link p-0 border-0 dropdown-toggle-icon" type="button" id="mobileMenuToggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="fas fa-bars fa-lg text-dark"></i>
    </button>

    <!--モバイルメニュー-->
    <div class="dropdown-menu dropdown-menu-right bg-light z-index-fix" aria-labelledby="mobileMenuToggle">
      <%= link_to home_path(mode: "friends"), class: "dropdown-item" do %>
        <i class="fas fa-user me-2"></i> 友人
      <% end %>
      <%= link_to home_path(mode: "group"), class: "dropdown-item" do %>
        <i class="fas fa-users me-2"></i> グループ
      <% end %>
      <%= link_to home_path(mode: "setting"), class: "dropdown-item" do %>
        <i class="fas fa-cog me-2"></i> 設定
      <% end %>
      <%= link_to home_path(mode: "credit"), class: "dropdown-item" do %>
        <i class="fas fa-info-circle me-2"></i> Credit
      <% end %>
    </div>
  </div>
</header>
