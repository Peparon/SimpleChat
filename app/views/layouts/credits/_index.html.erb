<div class="effect-list-container">
  <div class="row gx-1 gy-5">
    <% icons = { "fish" => "orca_cursor_effect", "apple-alt" => "newton_light_effect", "image" => "image_masking" } %>

    <% icons.each do |icon_name, partial_name| %>
      <div class="col-12 col-md-6">
        <%= link_to home_path(mode: "credit", effect: partial_name), class: "effect-icon-box shadow d-flex justify-content-center align-items-center" do %>
          <i class="fas fa-<%= icon_name %> fa-2x"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>